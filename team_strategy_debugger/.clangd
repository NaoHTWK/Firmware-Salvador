CompileFlags:
  Add:
    - "-std=c++20"
    - "-Wall"
    - "-Wextra"
  Remove:
    - "-W*"

Index:
  Background: Build
  StandardLibrary: Yes

InlayHints:
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes

Hover:
  ShowAKA: Yes

Diagnostics:
  ClangTidy:
    Add: 
#      - "readability-*"
#      - "performance-*"
#      - "modernize-*"
#      - "cppcoreguidelines-*"
    Remove:
      - "readability-magic-numbers"
      - "cppcoreguidelines-avoid-magic-numbers"
      - "modernize-use-trailing-return-type"

Completion:
  AllScopes: Yes 